### multiple inheritence 
when clas inherit more than one base class
#base class1
class Animal:
      def __init__(self,name):
          self.name = name
      def speak(self):
          print("sublass must impliment this method")
#base class 2
class Pet:
        def __init__(self,owner):
            self.owner = owner
#Derived class
class Dog(Animal,Pet):
     def __init__(self,name , owner):
           Pet.__init__(self,owner)
           Animal.__init__(self,name)
      def speak(self):
             print("wooof")

              
   
          
